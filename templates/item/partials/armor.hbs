<section
  class='tab armor {{tab.cssClass}}'
  data-group='primary'
  data-tab='armor'
>
    <div class="grid grid-4col align-end">
        <div class="resource flex column item-attr-row">
            <label for="system.armorType" class="resource-label">{{localize 'MYZ.ARMOR_TYPE'}}</label>
            <select name="system.armorType">
                {{selectOptions MYZ.ARMOR_TYPES selected=system.armorType localize=true}}
            </select>
        </div>
        <div class="resource flex column item-attr-row">
            <label for="system.rating" class="resource-label">{{localize 'MYZ.ARMOR_RATING'}}</label>
            <div class="flex">
                <input type="number" min="0" class="short-input" name="system.rating.value"
                    value="{{system.rating.value}}" />
                <span>/</span>
                <input type="number" min="0" class="short-input" name="system.rating.max"
                    value="{{system.rating.max}}" />
            </div>
        </div>
        <div class="resource flex column item-attr-row">
            <label for="system.rot" class="resource-label">{{localize 'MYZ.ARMOR_ROT_PROTECTION'}}</label>
            <div class="flex">
                <input type="number" min="0" class="short-input" name="system.rot.value" value="{{system.rot.value}}" />
                <span>/</span>
                <input type="number" min="0" class="short-input" name="system.rot.max" value="{{system.rot.max}}" />
            </div>
        </div>
        <div class="resource flex column align-end item-attr-row">
            <label for="system.equipped" class="checkbox-label">
                {{localize 'MYZ.EQUIPPED'}}
                <input class="input-checkbox" type="checkbox" name="system.equipped" {{checked system.equipped}}
                    data-dtype="Boolean" />
            </label>
        </div>
    </div>
    <div class="item-attr-row">
        <label for="system.comment" class="resource-label">{{localize 'MYZ.COMMENT'}}</label>
        <input type="text" name="system.comment" value="{{system.comment}}" />
    </div>
    
    {{!-- Description --}}
    {{> systems/mutant-year-zero/templates/item/partials/info.hbs editable=editable classCSS="info-mid"}}

    {{!-- {{>"systems/mutant-year-zero/templates/item/partials/dev-levels.hbs"}} --}}
</section>